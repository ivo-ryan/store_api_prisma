generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  cart     Cart?
  favorite Favorite[]
  orders    Order[] 
}

model Cart {
  id       Int           @id @default(autoincrement())
  userId   Int           @unique
  user     User          @relation(fields: [userId], references: [id])
  products CartProduct[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  position Int
  products Product[]
}

model Product {
  id          Int            @id @default(autoincrement())
  name        String
  description String
  price       Decimal        @db.Decimal(10, 2)
  mark        String
  categoryId  Int
  isNew       Boolean
  oldPrice    Decimal        @db.Decimal(10, 2)
  rating      Int
  featured    Boolean
  cart        CartProduct[]
  favorite    Favorite[]
  category    Category       @relation(fields: [categoryId], references: [id])
  images      ProductImage[]
  orderItem   OrderItem[]
}

model Favorite {
  userId    Int
  productId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@id([userId, productId])
}

model ProductImage {
  id        Int     @id @default(autoincrement())
  url       String
  altText   String?
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}

model CartProduct {
  cartId    Int
  productId Int
  quantity  Int      @default(1)
  addAt     DateTime @default(now())
  cart      Cart     @relation(fields: [cartId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])

  @@id([cartId, productId])
}

model Order {
  id         Int      @id @default(autoincrement())
  userId     Int 
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  status     OrderStatus @default(PENDING)
  total      Float
  customer   String?
  user User @relation(fields: [userId], references: [id])
  items      OrderItem[]
  payment    Payment?
}

model OrderItem {
  id        Int   @id @default(autoincrement())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   Int
  productId Int
  name      String
  price     Float
  quantity  Int

  product Product @relation(fields: [productId], references: [id])
}

model Payment {
  id           Int       @id @default(autoincrement())
  order        Order        @relation(fields: [orderId], references: [id])
  orderId      Int @unique
  provider     String       
  status       PaymentStatus @default(PENDING)
  amount       Float
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  playgroundUrl String?
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}
